{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "paths": {
    "@/*": [
      "src/*"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}